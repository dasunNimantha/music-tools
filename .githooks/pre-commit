#!/bin/sh
# Pre-commit hook for music-tools
# Runs cargo fmt to ensure code is formatted

# Source cargo environment if available
if [ -f "$HOME/.cargo/env" ]; then
    . "$HOME/.cargo/env"
fi

echo "üîç Running cargo fmt..."

# Check if cargo is available
if ! command -v cargo >/dev/null 2>&1; then
    # Try common cargo locations
    if [ -x "$HOME/.cargo/bin/cargo" ]; then
        export PATH="$HOME/.cargo/bin:$PATH"
    else
        echo "‚ùå cargo not found. Please install Rust."
        exit 1
    fi
fi

# Run cargo fmt and check for changes
cargo fmt --all -- --check
FMT_STATUS=$?

if [ $FMT_STATUS -ne 0 ]; then
    echo ""
    echo "‚ùå Formatting issues found!"
    echo "   Run 'cargo fmt --all' to fix them."
    echo ""
    exit 1
fi

echo "‚úÖ Code formatting OK"

# Optional: Run clippy (uncomment to enable)
# echo "üîç Running clippy..."
# cargo clippy --all-targets --all-features -- -D warnings
# if [ $? -ne 0 ]; then
#     echo "‚ùå Clippy found issues!"
#     exit 1
# fi
# echo "‚úÖ Clippy OK"

exit 0

